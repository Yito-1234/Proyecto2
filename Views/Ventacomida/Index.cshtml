@model IEnumerable<Proyecto2.Models.VentaComidum>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layoutfinal.cshtml";
}

<h1>Compras</h1>


<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                <center>
                    <label>Cantidad</label>
                </center>
            </th>
            <th>
                <center>
                    <label>Fecha</label>
                </center>
            </th>
            <th>
                <center>
                    <label>Comida</label>
                </center>
            </th>
       
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdComidaNavigation.NomComida)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdVenta" class="btn btn-warning" >Ediar</a> |
                
                <a asp-action="Delete" asp-route-id="@item.IdVenta" class="btn btn-danger" >Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
